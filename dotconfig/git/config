# This is Git's per-user configuration file.

[user]
	name = p3dr4m
	email = p3dr4m@hotmail.com
	signingkey = ~/.ssh/pedram.pub
[alias]
	st = status
	ci = commit
	br = branch
	lg = log --pretty=format:'[%h] [%ad] %s'
	graph = log --pretty=format:'%h %Cgreen %an: %Creset %s' --graph
	w = whatchanged
	diffc = diff --cached
	last = log -1 HEAD
	unstage = reset HEAD --
	ncci = commit -a --allow-empty-message -m ''
	zip = "!f() { git archive -o \"$1\" HEAD \"$@\"; }; f"
[core]
	autocrlf = input
	eol = lf
	fsmonitor = true
	untrackedCache = true
  editor = "code --wait"
[color]
	ui = true
[help]
	autocorrect = prompt
[commit]
	verbose = true
	gpgsign = true
[branch]
	sort = -committerdate
[column]
	ui = auto
[tag]
	sort = version:refname
	gpgsign = true
[init]
	defaultBranch = main
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[pull]
	rebase = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[diff]
	ignoreSubmodules = dirty
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[gpg]
	format = ssh
[rerere]
	enabled = true
	autoupdate = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[merge]
	conflictStyle = zdiff3
[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers

[include]
	path = ~/.gitconfig.local

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	line-numbers = true
