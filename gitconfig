# This is Git's per-user configuration file.
[color]
	ui = true
[user]
	name = Pedram N
	email = pednaz@proton.me
[alias]
	st = status
	ci = commit
	br = branch
	lg = log --pretty=format:'[%h] [%ad] %s'
	graph = log --pretty=format:'%h %Cgreen %an: %Creset %s' --graph
	w = whatchanged
	diffc = diff --cached
	last = log -1 HEAD
	unstage = reset HEAD --
  ncci = commit -a --allow-empty-message -m ''
  zip = "!f() { git archive -o \"$1\" HEAD \"$@\"; }; f"
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	eol = lf
[push]
	default = simple
[pull]
	rebase = false
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[diff]
	ignoreSubmodules = dirty
